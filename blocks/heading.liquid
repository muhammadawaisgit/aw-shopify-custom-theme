{% stylesheet %}
    .pb-heading-block a {
        all: unset;
    }
{% endstylesheet %}

{% assign heading_tag = block.settings.html_tag | default: 'h2' %}

{%- capture heading_style -%}
    {% render 'heading-style', heading_tag: heading_tag %}
    <style>
        {% render 'typography-style', item: block, heading_tag: heading_tag %}
        {% render 'background-style', item: block, heading_tag: heading_tag %}
        {% render 'border-style', item: block, heading_tag: heading_tag %}
        {% render 'margin-style', item: block, heading_tag: heading_tag %}
        {% render 'padding-style', item: block, heading_tag: heading_tag %}
    </style>
{%- endcapture -%}

{% comment %} {%- assign before =  container-style.size -%} {% endcomment %}
{%- assign content =  heading_style | strip_newlines | split: " " | join: " " | split: "*/" -%}
{%- assign new_style = "" -%}
{%- for word in content -%}
	{%- assign new_word = word | split: "/*" | first | strip | replace: "; ", ";" | replace: "} ", "}" | replace: "{ ", "{" | replace: " {", "{" -%}
  {%- assign new_style = new_style | append: new_word -%}
{%- endfor -%}

{% comment %}  CSS minifed: {{ before }} --> {{ new_style.size }}  {% endcomment %}
{{- new_style  }}

{% case heading_tag %}
    {% when "h1" %}
        <h1>
    {% when 'h2' %}
        <h2>
    {% when 'h3' %}
        <h3>
    {% when 'h4' %}
        <h4>
    {% when 'h5' %}
        <h5>
    {% when 'h6' %}
        <h6>
    {% when 'p' %}
        <p>
    {% when 'div' %}
        <div>
    {% when 'span' %}
        <span>
{% endcase %}

    {%- if block.settings.link_enable %}
        <a href="{{ block.settings.heading_link }}" {%- if block.settings.link_new_tab %}target="_blank" rel="noopener"{%- endif %}>
            {{ block.settings.heading_text }}
        </a>
    {%- else %}
        {{ block.settings.heading_text }}
    {%- endif %}

{% case heading_tag %}
    {% when "h1" %}
        </h1>
    {% when 'h2' %}
        </h2>
    {% when 'h3' %}
        </h3>
    {% when 'h4' %}
        </h4>
    {% when 'h5' %}
