{%- if block.settings.image != blank -%}
    {%- assign selector = 'img' -%}
{%- else -%}
    {%- assign selector = 'svg' -%}    
{%- endif -%}

{%- capture image_style -%}
    {% render 'image-style', selector: selector %}
    <style>
        {% render 'border-style', item: block, selector: selector %}
        {% render 'margin-style', item: block, selector: selector %}
        {% render 'padding-style', item: block, selector: selector, padding: 0 %}
    </style>
{%- endcapture -%}

{% comment %} {%- assign before =  container-style.size -%} {% endcomment %}
{%- assign content =  image_style | strip_newlines | split: " " | join: " " | split: "*/" -%}
{%- assign new_style = "" -%}
{%- for word in content -%}
	{%- assign new_word = word | split: "/*" | first | strip | replace: "; ", ";" | replace: "} ", "}" | replace: "{ ", "{" | replace: " {", "{" -%}
  {%- assign new_style = new_style | append: new_word -%}
{%- endfor -%}

{% comment %}  CSS minifed: {{ before }} --> {{ new_style.size }}  {% endcomment %}
{{- new_style  }}

{%- capture image -%}
    {% if block.settings.image != blank %}
        <img 
            src=" {{ block.settings.image | image_url }} "
            alt="{{ block.settings.image.alt | escape }}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            style="aspect-ratio:{{ block.settings.image.aspect_ratio }}"
        />
    {% else %}
        {{ 'detailed-apparel-1' | placeholder_svg_tag }}
    {% endif %}
{%- endcapture -%}

{% if block.settings.enable_link == true %}
    <a  style="width:100%"
        href="{{ block.settings.image_link }}" 
        {% if block.settings.open_in_new_tab %} target="_blank" {% endif %}
        {% if block.settings.add_nofollow %} rel="nofollow" {% endif %}
    >
        {{ image }}
    </a>
{% else %}
    {{ image }}
{% endif %}

