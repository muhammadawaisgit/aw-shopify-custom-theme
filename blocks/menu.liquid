{% stylesheet %}
  .pb-menu-block {
    min-width: max-content;
  }
  @media (max-width:768px){
    .pb-menu-block {
      display: none;
    }
  }
  .pb-menu-block a{
    all: unset;
  }
  .pb-menu-block > ul{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0;
    width: 100%;
  }
  .list-unstyled {
    list-style: none;
    padding: 0;
  }
  .menu__item {
    position: relative;
  }
  .menu__item .dropdown-menu {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: calc(100% + 0.5rem);
    left: 0;
    z-index: 9;
    opacity: 0;
    width: max-content;
    overflow: hidden;
    transform: scaleY(0);
    transform-origin: top;
    transition: all 0.2s ease;
  }
  .dropdown.is-active .dropdown-menu {
    opacity: 1;
    transform: scaleY(1);
  }
{% endstylesheet %}

{%- capture style -%}
<style>
  #shopify-block-{{ block.id }} ul {
    gap: {{ block.settings.min_item_gap }}px;
  }
  #shopify-block-{{ block.id }} {
    gap: {{ block.settings.min_item_gap }}px;
    {%- if block.settings.custom_width_enable %}
      width: {{ block.settings.custom_width }}{{ block.settings.custom_width_unit }};
    {%- endif %}
  }

  @media (max-width: {{ settings.tablet_breakpoint }}px) {
    #shopify-block-{{ block.id }} ul {
      gap: {{ block.settings.tablet_min_item_gap }}px;
    }
    #shopify-block-{{ block.id }} {
      {%- if block.settings.tablet_custom_width_enable %}
        width: {{ block.settings.tablet_custom_width }}{{ block.settings.tablet_custom_width_unit }};
      {%- endif %}
    }
  }

  #shopify-block-{{ block.id }} ul.dropdown-menu {
    background: {{ block.settings.dropdown_background_color }};
  }
  @media (max-width: {{ settings.tablet_breakpoint }}px) {
    #shopify-block-{{ block.id }} ul.dropdown-menu {
      background: {{ block.settings.tablet_dropdown_background_color }};
    }
  }

</style>
<style>
  {% render 'typography-style', item: block, selector: ul %}
  {% render 'border-style', item: block, selector: ul %}
  {% render 'margin-style', item: block, selector: ul %}
  {% render 'padding-style', item: block, selector: ul, padding: 0 %}

  {% render 'dropdown-border-style', item: block, selector: 'ul.dropdown-menu' %}
  {% render 'dropdown-padding-style', item: block, selector: 'ul.dropdown-menu' %}
</style>
{%- endcapture -%}

{% comment %} {%- assign before =  container-style.size -%} {% endcomment %}
{%- assign content =  style | strip_newlines | split: " " | join: " " | split: "*/" -%}
{%- assign new_style = "" -%} 
{%- for word in content -%}
	{%- assign new_word = word | split: "/*" | first | strip | replace: "; ", ";" | replace: "} ", "}" | replace: "{ ", "{" | replace: " {", "{" -%}
  {%- assign new_style = new_style | append: new_word -%}
{%- endfor -%}

{% comment %}  CSS minifed: {{ before }} --> {{ new_style.size }}  {% endcomment %}
{{- new_style  }}

{%- assign menu = block.settings.menu -%}

{% if menu %}
  <ul class="list-unstyled">
    {% for link in menu.links %}
      <li class="menu__item {% if link.links.size > 0 -%} dropdown {%- endif -%} {{ block.settings.link_preset }}">
        {%- if link.links.size > 0 -%}
          <a>
            {{ link.title }}
          </a>
        {%- else -%}
          <a href="{{ link.url }}">
            {{ link.title }}
          </a>
        {%- endif -%}


        {% if link.links.size > 0 %}
          <ul class="dropdown-menu list-unstyled">
            {% for sublink in link.links %}
              <li class="dropdown-item">
                <a href="{{ sublink.url }}">
                  {{ sublink.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endif %}

<script>
  const dropdowns = document.querySelectorAll(".menu__item.dropdown");

  const dropdownMenu = () => {
    dropdowns.forEach(dropdown => {
        dropdown.classList.toggle("is-active");
    });
  };

  dropdowns.forEach(dropdown => {
    dropdown.addEventListener("click", () => {
        dropdownMenu();
    });
  });

  // Hide when clicked outside the dropdown
  dropdowns.forEach(dropdown => {
    window.addEventListener("click", (e) => {
        if (!e.target.closest(".dropdown")) {
          if (dropdown.classList.contains("is-active")) {
              dropdownMenu();
          }
        }
    });
  });

</script>

