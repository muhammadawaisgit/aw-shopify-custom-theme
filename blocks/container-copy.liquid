{% stylesheet %}
  .child-container{
    box-sizing: border-box;
  }
{% endstylesheet %}

{% capture container_style %}
<style>
  {%- render 'container_style' %}
  {%- render 'background-style', item: block %}
  {%- render 'border-style', item: block %}
  {%- render 'margin-style', item: block %}
  {%- render 'padding-style', item: block %}
</style>
{% endcapture %}

{% comment %} {%- assign before =  container-style.size -%} {% endcomment %}
{%- assign content =  container_style | strip_newlines | split: " " | join: " " | split: "*/" -%}
{%- assign new_style = "" -%}
{%- for word in content -%}
	{%- assign new_word = word | split: "/*" | first | strip | replace: "; ", ";" | replace: "} ", "}" | replace: "{ ", "{" | replace: " {", "{" -%}
  {%- assign new_style = new_style | append: new_word -%}
{%- endfor -%}

{% comment %}  CSS minifed: {{ before }} --> {{ new_style.size }}  {% endcomment %}
{{- new_style  }}

{% comment %} Block Content Will show here {% endcomment %}
{% content_for 'blocks' %}

