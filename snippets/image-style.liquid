<style>
    #shopify-block-{{ block.id }}, #shopify-block-{{ block.id }} a {
        text-align: {{ block.settings.image_alignment }};
        /* Width */
        {% if block.settings.custom_width_enable %}
            width: {{ block.settings.custom_width }}{{ block.settings.custom_width_unit }};
        {% else %}
            width: auto;
        {% endif %}
        align-self: {{ block.settings.align_self }};
    }

    @media (max-width:{{ settings.tablet_breakpoint }}px) {
        #shopify-block-{{ block.id }}, #shopify-block-{{ block.id }} a {
            {%- if block.settings.tablet_image_alignment != 'off' -%}
                text-align: {{ block.settings.tablet_image_alignment }};
            {%- endif -%}
            /* Width */
            {% if block.settings.tablet_custom_width_enable %}
                width: {{ block.settings.tablet_custom_width }}{{ block.settings.tablet_custom_width_unit }};
            {% endif %}
            {%- if block.settings.tablet_align_self != 'auto' -%}
                align-self: {{ block.settings.tablet_align_self }};
            {%- endif -%}
        }
    }

    @media (max-width:{{ settings.mobile_breakpoint }}px) {
        #shopify-block-{{ block.id }}, #shopify-block-{{ block.id }} a {
            {%- if block.settings.mobile_image_alignment != 'off' -%}
                text-align: {{ block.settings.mobile_image_alignment }};
            {%- endif -%}
            /* Width */
            {% if block.settings.mobile_custom_width_enable %}
                width: {{ block.settings.mobile_custom_width }}{{ block.settings.mobile_custom_width_unit }};
            {% endif %}
            {%- if block.settings.mobile_align_self != 'auto' -%}
                align-self: {{ block.settings.mobile_align_self }};
            {%- endif -%}
        }
    }

    #shopify-block-{{ block.id }} {{ selector }} {
        width: {% if block.settings.width != blank or block.settings.width == 0 %}{{ block.settings.width }}{{ block.settings.width_unit }} {% else %} auto {% endif %};
        max-width: {% if block.settings.max_width != blank or block.settings.max_width == 0 %}{{ block.settings.max_width }}{{ block.settings.max_width_unit }} {% else %} 100%  {% endif %};
        height: {% if block.settings.height != blank or block.settings.height == 0 %}{{ block.settings.height }}{{ block.settings.height_unit }} {% else %} auto {% endif %};
        object-fit: {% if block.settings.object_fit != blank or block.settings.object_fit == 0 %}{{ block.settings.object_fit }} {% else %} contain {% endif %};
    }

    @media (max-width:{{ settings.tablet_breakpoint }}px) {
        #shopify-block-{{ block.id }} {{ selector }} {
            {% if block.settings.tablet_width != blank or block.settings.tablet_width == 0 %}
                width: {{ block.settings.tablet_width }}{{ block.settings.tablet_width_unit }};
            {% endif %};
            {% if block.settings.tablet_max_width != blank or block.settings.tablet_max_width == 0 %}
                max-width: {{ block.settings.tablet_max_width }}{{ block.settings.tablet_max_width_unit }};
            {% endif %};
            {% if block.settings.tablet_height != blank or block.settings.tablet_height == 0 %}
                height: {{ block.settings.tablet_height }}{{ block.settings.tablet_height_unit }};
            {% endif %};
            {% if block.settings.tablet_object_fit != blank or block.settings.tablet_object_fit == 0 %}
                object-fit: {{ block.settings.tablet_object_fit }};
            {% endif %};
        }
    }
    
    @media (max-width:{{ settings.mobile_breakpoint }}px) {
        #shopify-block-{{ block.id }} {{ selector }} {
            {% if block.settings.mobile_tablet_width != blank or block.settings.mobile_tablet_width == 0 %}
                width: {{ block.settings.mobile_tablet_width }}{{ block.settings.mobile_tablet_width_unit }};
            {% endif %};
            {% if block.settings.mobile_tablet_max_width != blank or block.settings.mobile_tablet_max_width == 0 %}
                max-width: {{ block.settings.mobile_tablet_max_width }}{{ block.settings.mobile_tablet_max_width_unit }};
            {% endif %};
            {% if block.settings.mobile_tablet_height != blank or block.settings.mobile_tablet_height == 0 %}
                height: {{ block.settings.mobile_tablet_height }}{{ block.settings.mobile_tablet_height_unit }};
            {% endif %};
            {% if block.settings.mobile_tablet_object_fit != blank or block.settings.mobile_tablet_object_fit == 0 %}
                object-fit: {{ block.settings.mobile_tablet_object_fit }};
            {% endif %};
        }
    }

</style>