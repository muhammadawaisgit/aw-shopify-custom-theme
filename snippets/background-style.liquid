/* Background */
{%- if heading_tag != blank -%}
#shopify-block-{{ block.id }} {{ heading_tag }}, #shopify-block-{{ block.id }} a {
{% else %}
#shopify-{%- if item == block -%} block {%- else -%} section {%- endif -%}-{{ item.id }} {
{%- endif -%}
    {%- if item.settings.background_type == 'classic' -%} 
        {%- if item.settings.background_color != blank -%}
            background: {{ item.settings.background_color }};
        {%- endif -%}
        {%- if item.settings.background_image_enabled and item.settings.background_image != null -%}
            background-image: url({{ item.settings.background_image | image_url: width: 1440, height: 900 }});
            background-position: {{ item.settings.background_position }};
            background-attachment: {{ item.settings.background_attachment }};
            background-repeat: {{ item.settings.background_repeat }};
            background-size: {{ item.settings.background_size }};
        {%- endif -%}
        {%- else -%} 
        /* Gradient background can be added here */
        background-image: linear-gradient({{ item.settings.gradient_angle }}deg, {{ item.settings.gradient_first_color }} {{ item.settings.first_gradient_location }}%, {{ item.settings.gradient_second_color }} {{ item.settings.second_gradient_location }}%);
    {%- endif -%}
}

