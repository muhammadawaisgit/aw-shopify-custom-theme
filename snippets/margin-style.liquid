{% if item == block %}
    {%- assign shopify_element = 'block' -%}
{%- else -%}
    {%- assign shopify_element = 'section' -%}    
{% endif %}

{% comment %} <style>   {% endcomment %}
#shopify-{{ shopify_element }}-{{ item.id }} {{ selector }} {
    /* Margin */
    {%- if item.settings.margin_type == 'custom' -%}
        margin: {{ item.settings.margin_all }}px;
    {%- elsif item.settings.margin_type == 'separate' -%}
        margin: {{ item.settings.margin_top }}px {{ item.settings.margin_right }}px {{ item.settings.margin_bottom }}px {{ item.settings.margin_left }}px;
    {%- else -%}
        {%- case item.settings.auto_margin_position %}
            {%- when 'top' %}
                margin: auto 0 0 0;
            {%- when 'bottom'%}
                margin: 0 0 auto 0;
            {%- when 'left' %}
                margin: 0 auto 0 0;
            {%- when 'right' %}
                margin: 0 0 0 auto;
            {%- when 'horzontal' %}
                margin: 0 auto;
            {%- when 'vertical' %}
                margin: auto 0;
            {%- else %}
                margin: auto;
        {%- endcase -%}
    {%- endif -%}
}

